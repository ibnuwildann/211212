<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Report Divisi Penyiaran"
                android:textColor="@color/white"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="70dp"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JEMBER 1 TV"
                android:textColor="@color/white"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="104dp"
                android:textSize="17dp"/>
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:columnCount="3"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardlaporan"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_row="0"
                app:cardBackgroundColor="@color/white"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"/>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/calendar"
                        android:layout_gravity="center_horizontal|center_vertical"/>
                    <TextView
                        android:textColor="@color/bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan Harian"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:paddingTop="125dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardcekdata"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                app:cardBackgroundColor="@color/white"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/report"
                    android:layout_gravity="center_horizontal|center_vertical"/>
                <TextView
                    android:textColor="@color/bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cek data laporan"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:paddingTop="125dp"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:theme="@style/buttonstyle1"
                android:id="@+id/btnkeluar"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_row="2"
                android:layout_marginTop="200dp"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:textColor="@color/red"
                android:text="Keluar"/>
        </GridLayout>

</LinearLayout>

</ScrollView>